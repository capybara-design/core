{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "types": ["node", "rive/globals"],
    "paths": {
      "@capybara-design/core": ["./src/*"]
    }
  },
  "exclude": [".rive", "build", "coverage", "dist", "node_modules"]
}
